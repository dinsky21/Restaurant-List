<!-- ./views/layouts/main.handlebars -->

<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <meta http-equiv='X-UA-Compatible' content='ie=edge' />
    <title>Restaurant List</title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
    <script
      src='https://kit.fontawesome.com/20ebdc1c11.js'
      crossorigin='anonymous'
    ></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>

    <!-- navigation -->
    <header>
      <!-- navigation -->
      <nav class='navbar navbar-light bg-light justify-content-center my-3'>
        <div class='container-fluid col-md-7'>
          <a class='navbar-brand' href='/'>
            <img
              src='https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png'
              width='30'
              height='30'
              class='d-inline-block align-top'
              alt='我的餐廳清單'
            />
            我的餐廳清單
          </a>
          <li class='nav-item'>
            {{#if isAuthenticated}}
              <a class='btn btn-outline-major' href='/users/logout'>Logout</a>
            {{else}}
              <a class='btn btn-outline-major' href='/users/login'>Login</a>
            {{/if}}
          </li>

        </div>
      </nav>

      <div class='banner'></div>
    </header>

    <!-- partial templates will replace the part of "body" here -->
    {{{body}}}

    <!-- include javascript files here -->
    <script src='/javascripts/popper.js'></script>
    <script src='/javascripts/bootstrap.js'></script>
  </body>
</html>